{% if image_url %}
  <style>
    .block_homepage {
      background: url({{ image_url }});
      background-size: cover;
    }
  </style>
{% endif %}
{% set special_class = 'block_homepage' %}
<div{{ attributes.addClass(special_class) }}>
  {# title_suffix this contains classes for the contextual links. #}
  {{ title_suffix }}
  {% block content %}
    <div class="container">
      <a class="burger"><i class="fa fa-bars"></i></a>
      {{ content|without('field_hero_background_image') }}
    </div>
  {% endblock %}
</div>
